{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "PetsTable",
            "Effect": "Allow",
            "Action": [
                "dynamodb:BatchGetItem",
                "dynamodb:BatchWriteItem",
                "dynamodb:PutItem",
                "dynamodb:DeleteItem",
                "dynamodb:GetItem",
                "dynamodb:Scan",
                "dynamodb:Query",
                "dynamodb:UpdateItem"
            ],
            "Resource": [
                "arn:aws:dynamodb:*:*:table/Pets",
                "arn:aws:dynamodb:*:*:table/Pets/*"
            ]
        }
    ]
}